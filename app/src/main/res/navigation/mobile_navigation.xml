<!-- mobile_navigation.xml -->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.a3tabtest.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.a3tabtest.ui.dashboard.DashboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/activity_recycler_view" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.a3tabtest.ui.notifications.NotificationsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_notifications" />


</navigation>
